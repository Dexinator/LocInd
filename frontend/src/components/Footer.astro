---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
const contactEmail = "contacto@localizacionindustrial.com"; // Placeholder email
const contactPhone = "55 6533 7013"; // Placeholder phone

// Enlaces para el footer
const productLinks = [
    { name: "SafeT-3", url: "/productos/safet-3/" },
    { name: "SafeO-3", url: "/productos/safeo-3/" },
    { name: "SafeA-3", url: "/productos/safea-3/" },
    { name: "SafeV-3", url: "/productos/safev-3/" }
];

const mainLinks = [
    { name: "Inicio", url: "/" },
    { name: "Cómo Funciona", url: "/como-funciona/" },
    { name: "Productos", url: "/productos/" },
    { name: "Casos de Éxito", url: "/casos-exito/" },
    { name: "Contacto", url: "/contacto/" }
];

const legalLinks = [
    { name: "Política de Privacidad", url: "/privacidad/" },
    { name: "Términos de Servicio", url: "/terminos/" },
    { name: "Mapa del Sitio", url: "/sitemap.html" }
];
---

<footer class="bg-brand-purple text-gray-300 py-8 mt-16">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            {/* Columna 1: Logo/Marca */}
            <div>
                <h3 class="text-lg font-bold font-heading text-white mb-3">Localización Industrial</h3>
                <p class="text-sm text-gray-300 mb-4">Precisión que transforma la industria.</p>
                <div class="flex space-x-4 mt-4">
                    <a href="#" aria-label="LinkedIn" class="text-gray-300 hover:text-white transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd"/></svg>
                    </a>
                    <a href="/politica-devoluciones" class="text-gray-300 hover:text-white transition-colors">Política de Devoluciones  </a>
                    {/* Añadir más iconos según sea necesario */}
                </div>
            </div>

            {/* Columna 2: Enlaces Principales */}
            <div>
                <h4 class="text-md font-semibold font-heading text-white mb-3">Enlaces</h4>
                <ul class="space-y-2 text-sm">
                    {mainLinks.map(link => (
                        <li>
                            <a href={link.url} class="text-gray-300 hover:text-white transition-colors">
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            {/* Columna 3: Productos */}
            <div>
                <h4 class="text-md font-semibold font-heading text-white mb-3">Productos</h4>
                <ul class="space-y-2 text-sm">
                    {productLinks.map(link => (
                        <li>
                            <a href={link.url} class="text-gray-300 hover:text-white transition-colors">
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            {/* Columna 4: Contacto */}
            <div>
                <h4 class="text-md font-semibold font-heading text-white mb-3">Contacto</h4>
                <ul class="space-y-2 text-sm">
                    <li>
                        <a href={`mailto:${contactEmail}`} class="text-gray-300 hover:text-white transition-colors flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            {contactEmail}
                        </a>
                    </li>
                    <li>
                        <a href={`tel:${contactPhone.replace(/\s+/g, '')}`} class="text-gray-300 hover:text-white transition-colors flex items-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                            {contactPhone}
                        </a>
                    </li>
                    <li class="flex items-center text-gray-300">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        Puebla, México
                    </li>
                </ul>
            </div>
        </div>

        <div class="mt-8 pt-6 border-t border-purple-deep-700 flex flex-col md:flex-row justify-between items-center text-sm text-gray-300">
            <div>© {currentYear} Localización Industrial. Todos los derechos reservados.</div>
            <div class="mt-4 md:mt-0">
                <ul class="flex flex-wrap gap-x-6">
                    {legalLinks.map(link => (
                        <li>
                            <a href={link.url} class="text-gray-300 hover:text-white transition-colors text-xs">
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        </div>
    </div>
</footer> 