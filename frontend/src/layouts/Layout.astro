---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "Sitio web oficial de Rastreo Industrial" } = Astro.props;

// Importar estilos globales
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		
		<!-- Google Fonts - SegÃºn Manual de Identidad -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700;900&family=Roboto:wght@400&display=swap" rel="stylesheet">
		<!-- Montserrat: 500 (Medium), 700 (Bold), 900 (Black) y Roboto Regular -->
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	/* Importar estilos globales */
	@import "../styles/global.css";
</style>
